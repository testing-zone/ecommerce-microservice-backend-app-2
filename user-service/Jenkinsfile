pipeline {
    agent any
    
    tools {
        maven 'Maven'
        // Comentamos temporalmente el JDK hasta solucionarlo
        // jdk 'JDK-11'
    }
    
    environment {
        PROJECT_VERSION = '0.1.0'
        DOCKER_IMAGE = "user-service-ecommerce"
        DOCKER_TAG = "${BUILD_NUMBER}"
        MAVEN_OPTS = '-Dmaven.repo.local=/var/jenkins_home/.m2/repository'
    }
    
    stages {
        stage('Verify Java Version') {
            steps {
                echo 'Verifying available Java versions...'
                sh 'echo "Current JAVA_HOME: $JAVA_HOME"'
                sh 'which java'
                sh 'java -version'
                sh 'javac -version'
                sh 'mvn -version'
                
                // Verificar si hay otros JDKs disponibles
                sh 'ls -la /var/jenkins_home/tools/hudson.model.JDK/ || echo "No JDK tools found"'
                sh 'find /usr -name "java" -type f 2>/dev/null | head -10 || echo "No additional java found"'
            }
        }
        
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application...'
                dir('user-service') {
                    sh 'echo "Using Java version:"'
                    sh 'java -version'
                    sh 'mvn clean compile -DskipTests'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                dir('user-service') {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    dir('user-service') {
                        publishTestResults testResultsPattern: 'target/surefire-reports/*.xml'
                        publishCoverage adapters: [jacocoAdapter('target/site/jacoco/jacoco.xml')], sourceFileResolver: sourceFiles('STORE_LAST_BUILD')
                    }
                }
            }
        }
        
        stage('Package') {
            steps {
                echo 'Packaging the application...'
                dir('user-service') {
                    sh 'mvn package -DskipTests'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                echo 'Building Docker image...'
                dir('user-service') {
                    script {
                        def dockerImage = docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                        dockerImage.tag("${DOCKER_IMAGE}:latest")
                    }
                }
            }
        }
        
        stage('Archive Artifacts') {
            steps {
                dir('user-service') {
                    archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: false
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed.'
            cleanWs()
        }
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
        unstable {
            echo 'Pipeline unstable!'
        }
    }
} 